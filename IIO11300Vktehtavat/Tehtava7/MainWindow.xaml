<Window x:Class="Tehtava7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7"
        mc:Ignorable="d"
        Title="Password strenght" Height="300" Width="230">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Height="20" Text="Tarkistettava salasana"/>
            <TextBox x:Name="txtPassword" Width="200" Height="20" Text="" SelectionChanged="txtPassword_SelectionChanged"/>
            <ListBox Name="lbInfo" Width="200" Height="150"/>
            <ListBox Name="lbStatus" Width="200" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
